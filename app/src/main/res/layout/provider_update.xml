<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="412dp">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="234dp"
            android:layout_height="98dp"
            app:srcCompat="@drawable/logo"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="2dp"
            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Advetisement"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="100dp"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Title"
            android:text="Service 001"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="100dp" />




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="184dp"
            tools:ignore="MissingConstraints"
            android:backgroundTint="@color/white">


            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/update" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="28dp"
                android:layout_height="41dp"
                app:srcCompat="@drawable/location" />
            <EditText
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kurunegala. SriLanka"
                android:layout_marginTop="8dp"
                android:hint="Colombo, SriLanka" />
        </LinearLayout>
        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/editTextTextMultiLine2"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:hint="Description"
            android:text="sample description sample description sample description sample description "
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="60dp"
            android:hint="Price in Rs | eg: 3000/HR"
            android:text="3000/HR"
            android:textSize="15sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="100dp" />

        <Button
            android:id="@+id/view"
            android:layout_width="120dp"
            android:layout_marginTop="20dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:shadowRadius="200"
            android:soundEffectsEnabled="true"
            android:text="Update"
            app:cornerRadius="20dp" />


    </LinearLayout>


</RelativeLayout>